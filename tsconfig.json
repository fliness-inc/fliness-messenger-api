{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@/*": ["*"],
      "@src/*": ["src/*"],
      "@db/*": ["src/db/*"],
      "@modules/*": ["src/modules/*"],
      "@tools/*": ["src/tools/*"]
    }
  }
}
