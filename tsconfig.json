{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "allowJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"],
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@/*": ["*"],
      "@src/*": ["src/*"],
      "@db/*": ["src/db/*"],
      "@schema/*": ["src/schema/*"],
      "@lib/*": ["src/lib/*"],
      "@tools/*": ["src/tools/*"]
    }
  }
}
